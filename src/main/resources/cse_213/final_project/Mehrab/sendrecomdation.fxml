<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="697.0" prefWidth="790.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="cse_213.final_project.Mehrab.FinancialRecommendationController">

    <Label layoutX="200" layoutY="20" text="Financial Recommendation" />

    <Label layoutX="30" layoutY="70" text="Recommendation Type" />
    <ComboBox fx:id="recommendationTypeComboBox" layoutX="159.0" layoutY="66.0" prefWidth="200" />

    <Label layoutX="406.0" layoutY="70.0" text="Recommendation Title" />
    <TextField fx:id="recommendationTitleField" layoutX="535.0" layoutY="66.0" prefWidth="200" promptText="Enter recommendation title" />

    <Label layoutX="30" layoutY="170" text="Recommendation Description" />
    <TextArea fx:id="recommendationDescriptionField" layoutX="200.0" layoutY="150.0" prefHeight="74.0" prefWidth="504.0" promptText="Enter description" />

    <Label layoutX="30" layoutY="290" text="Financial Amount" />
    <TextField fx:id="financialAmountField" layoutX="150" layoutY="290" prefWidth="200" promptText="Enter amount" />

    <Label layoutX="439.0" layoutY="286.0" text="Budget Allocation" />
    <TextField fx:id="budgetAllocationField" layoutX="559.0" layoutY="286.0" prefWidth="200" promptText="Enter allocated budget" />

    <Label layoutX="28.0" layoutY="358.0" text="Project Timeline" />
    <DatePicker fx:id="projectTimelineDatePicker" layoutX="148.0" layoutY="358.0" prefWidth="200" />

    <Label layoutX="434.0" layoutY="353.0" text="Date of Recommendation" />
    <DatePicker fx:id="recommendationDatePicker" layoutX="576.0" layoutY="349.0" prefWidth="200" />

    <Button fx:id="sendRecommendationButton" layoutX="300.0" layoutY="428.0" onAction="#handleSendRecommendation" prefHeight="25.0" prefWidth="257.0" text="Send Recommendation" />

    <Label layoutX="122.0" layoutY="453.0" text="Recommendation Data" />
    <TextArea fx:id="recommendationDataArea" editable="false" layoutX="122.0" layoutY="473.0" prefHeight="100" prefWidth="540" wrapText="true" />

    <Label fx:id="errorMessage" layoutX="30" layoutY="660" textFill="red" visible="false" />
    <Label fx:id="confirmationMessage" layoutX="30" layoutY="680" textFill="green" visible="false" />
</AnchorPane>
